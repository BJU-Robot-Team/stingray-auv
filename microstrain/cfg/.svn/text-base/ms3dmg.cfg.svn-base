#! /usr/bin/env python

PACKAGE='microstrain'
import roslib
roslib.load_manifest(PACKAGE)

from dynamic_reconfigure.parameter_generator import *

gen = ParameterGenerator()
#       Name          Type      Level Description                                    Default Min   Max
gen.add("port",       str_t,    0,    "The port the IMU is plugged into.",           "/dev/ttyUSB0")
gen.add("baud",       int_t,    0,    "The baud rate of the IMU.",                   115200, 2400, 115200)
gen.add("reconnect",  bool_t,   0,    "Whether to attempt to reconnect to IMU.",     False)

exit(gen.generate(PACKAGE, "microstrain", "ms3dmg"))
